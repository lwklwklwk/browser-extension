{
	"manifest_version": 2,
	"name": "demo",
	"version": "1.0.0",
	"description": "简单的Chrome扩展demo",
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},	"browser_action": 
	{
		"default_icon": {
            "19": "img/icon.png"
        },
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "popup.html"
	},
	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["js/content.js"],
			"css": ["css/common.css"],
			"run_at": "document_start"
		},
		{
		"matches": ["https://blog.csdn.net/*"],
			"js": ["js/fkCSDN.js"],
			"css": ["css/common.css"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		"js/translate.js",
		"thirdpart/axios.js"
	],
    "background":
	{
		"scripts": ["js/background.js"]
	},
    "permissions":
	[
		"contextMenus",
		"tabs", 
		"notifications", 
		"webRequest",
		"webRequestBlocking",
		"storage", 
		"http://*/*",
		"https://*/*"
	]
}